 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{{ attach_library('olympian9/region--footer') }}
<footer id="footer" role="contentinfo">
  <div class="footer-top flex">
    {% include '@olympian9/block/block--menu-quick-links.html.twig' %}
    <div class="column callout flex center">
      <div class="inner">
      {% if instagram_username or facebook_username or youtube_username or twitter_username %}
          <h3>Follow Us</h3>
          <ul class="social-links solid">
            {% if instagram_username is not empty %}
              <li>
                  <a href="https://instagram.com/{{ instagram_username }}">Instagram<svg><use xlink:href="#instagram" xmlns:xlink="https://www.w3.org/1999/xlink"></use></svg></a>
              </li>
            {% endif %}
            {% if facebook_username is not empty %}
              <li>
                  <a href="https://www.facebook.com/{{ facebook_username }}">Facebook<svg><use xlink:href="#facebook" xmlns:xlink="https://www.w3.org/1999/xlink"></use></svg></a>
              </li>
            {% endif %}
            {% if twitter_username is not empty %}
              <li>
                  <a href="https://twitter.com/{{ twitter_username }}">X<svg xmlns="https://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"/></svg></a>
              </li>
            {% endif %}
            {% if youtube_username is not empty %}
              <li>
                  <a href="https://www.youtube.com/@{{ youtube_username }}">YouTube<svg><use xlink:href="#youtube" xmlns:xlink="https://www.w3.org/1999/xlink"></use></svg></a>
              </li>
            {% endif %}
            {% if linkedin_username is not empty %}
              <li>
                  <a href="https://www.linkedin.com/{{ linkedin_username }}">LinkedIn<svg xmlns="https://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M100.3 448H7.4V148.9h92.9zM53.8 108.1C24.1 108.1 0 83.5 0 53.8a53.8 53.8 0 0 1 107.6 0c0 29.7-24.1 54.3-53.8 54.3zM447.9 448h-92.7V302.4c0-34.7-.7-79.2-48.3-79.2-48.3 0-55.7 37.7-55.7 76.7V448h-92.8V148.9h89.1v40.8h1.3c12.4-23.5 42.7-48.3 87.9-48.3 94 0 111.3 61.9 111.3 142.3V448z"/></svg></a>
              </li>
            {% endif %}
          </ul>
          {% endif %}
          <p>
            <em>Contact Us:</em>
              {{ site_name }}
              <a href="mailto:{{ site_mail }}">{{ site_mail }}</a>
              {% if site_phone %}{{ site_phone }}{% endif %}
          </p>
        </div>
    </div>
  </div>
  <div class="footer-bottom flex">
    <div class="column wustl flex">
      <div class="inner">
        <a class="logo" href="https://washu.edu" aria-label="Click here to go to Washu.edu">
          <svg class="logo"><use xlink:href="#logo-wu"></use></svg>
        </a>
        <address>1 Brookings Drive / St. Louis, MO 63130 / wustl.edu</address>
      </div>
      <div class="masquerade flex center">
        {{ drupal_entity('block', 'masquerade') }}
      </div>
    </div>
    {{ page.bottom }}
  </div>
</footer>
