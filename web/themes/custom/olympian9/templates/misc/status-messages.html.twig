{#
/**
 * @file
 * Theme override for status messages.
 *
 * Displays status, error, and warning messages, grouped by type.
 *
 * An invisible heading identifies the messages for assistive technology.
 * Sighted users see a colored box. See http://www.w3.org/TR/WCAG-TECHS/H69.html
 * for info.
 *
 * Add an ARIA label to the contentinfo area so that assistive technology
 * user agents will better describe this landmark.
 *
 * Available variables:
 * - message_list: List of messages to be displayed, grouped by type.
 * - status_headings: List of all status types.
 * - attributes: HTML attributes for the element, including:
 *   - class: HTML classes.
 * - title_ids: A list of unique ids keyed by message type.
 *
 * @see claro_preprocess_status_messages().
 */
#}
{{ attach_library('olympian9/status-messages') }}
<div data-drupal-messages class="messages-list">
  <div class="messages__wrapper">
    {% for type, messages in message_list %}
      {% set classes = [
        'messages-list__item',
        'messages',
        'messages--' ~ type,
      ] %}
      {% set is_message_with_title = status_headings[type] %}
      {% set is_message_with_icon = type in ['error', 'info', 'status', 'warning'] %}

      <div role="contentinfo"
           aria-labelledby="{{ title_ids[type] }}"{{ attributes.addClass(classes)|without('role', 'aria-label') }}>
        {% if type == 'error' %}
        <div role="alert">
          {% endif %}
          {% set icon_map = {'status': 'fa-check', 'warning': 'fa-exclamation-triangle', 'info': 'fa-info', 'error': 'fa-exclamation'} %}
          {% set color_map = {'status': 'success', 'warning': 'warning', 'info': 'info', 'error': 'error'} %}
          {% set icon = icon_map[type] ?? '' %}
          {% set color = color_map[type] ?? '' %}

          {% if is_message_with_title or is_message_with_icon %}
            <div class="alert__icon {{ color }}">

              <span class="fa-stack fa-1x">
                <span role="presentation"
                      class="fas fa-circle fa-stack-2x"></span>
                <span role="presentation"
                      class="fas fa-stack-1x fa-inverse {{ icon }}"></span>
              </span>
            </div>
          {% endif %}
          <div class="messages__content">
            {% if messages|length > 1 %}
              <ul class="messages__list">
                {% for message in messages %}
                  <li class="messages__item">{{ message }}</li>
                {% endfor %}
              </ul>
            {% else %}
              {{ messages|first }}
            {% endif %}
          </div>
          {% if type == 'error' %}
        </div>
        {% endif %}
        <button type="button" class="icon--button button--dismiss"
                title="{{ 'Dismiss'|t }}">
                 <svg class="button--dismiss-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Pro 6.7.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2024 Fonticons, Inc.--><path d="M64 64C46.3 64 32 78.3 32 96l0 320c0 17.7 14.3 32 32 32l384 0c17.7 0 32-14.3 32-32l0-320c0-17.7-14.3-32-32-32L64 64zM0 96C0 60.7 28.7 32 64 32l384 0c35.3 0 64 28.7 64 64l0 320c0 35.3-28.7 64-64 64L64 480c-35.3 0-64-28.7-64-64L0 96zm180.7 84.7c6.2-6.2 16.4-6.2 22.6 0L256 233.4l52.7-52.7c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6L278.6 256l52.7 52.7c6.2 6.2 6.2 16.4 0 22.6s-16.4 6.2-22.6 0L256 278.6l-52.7 52.7c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6L233.4 256l-52.7-52.7c-6.2-6.2-6.2-16.4 0-22.6z"/></svg>

              <span class="sr-only"> {{ 'Close'|t }} </span></button>
      </div>
      {# Remove type specific classes. #}
      {% set attributes = attributes.removeClass(classes) %}
    {% endfor %}
  </div>
</div>
