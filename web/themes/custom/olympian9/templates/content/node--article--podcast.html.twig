{% block content %}
  {% if is_shared_content == 1 %}
    {# <div{{ attributes.addClass(classes) }}> #}
    <section class="podcasts flex dark" aria-labels="faculty podcasts">
      <div class="column forty heading reveal">
        <a href="http://artsci.washu.edu/ampersand/categories/podcast"><img
            srcset="{{ base_path ~ directory }}//images/microphone_320.webp 320w, {{ base_path ~ directory }}//images/microphone_600.webp 600w, {{ base_path ~ directory }}//images/microphone_900.webp 900w" sizes="(max-width:1029px) 85vw, 1300px" width="900" height="566"
            src="{{ base_path ~ directory }}//images/microphone_900.webp" loading="lazy"
            alt="Hold That Thought Podcast"></a>
      </div>
      <div class="column sixty slideshow dot-slideshow dots-below flex reveal">
        {% if externalURL %}
        <a href="{{ externalURL }}" class="slide post" target="_blank"
           aria-label="Navigates to direct link of article">
          {% else %}
          <a href="/node/{{ node.id }}/latest" class="slide post" aria-label="View Article">
            {% endif %}
            {# $class = (strpos(render($content['field_category']), 'Video') !== false) ? 'video-post' : 'blog-post'; #}
            <article class="slide post podcast-post">
              <div class="post-details">
                {{ title_prefix }}
                {% if nodetitle %}
                  <h3{{ title_attributes }}>{{ nodetitle }}</h3>
                {% endif %}
                {{ title_suffix }}
                {% if excerpt %}
                  <div class="teaser-text"><p>{{ summary }}</p></div>
                {% endif %}
                <div class="podcast-embed">{{ soundcloud }}</div>
              </div>
            </article>
          </a>
      </div>
    </section>
    {# </div> #}
    {#  if not shared content #}
  {% else %}
    {# <div{{ attributes.addClass(classes) }}> #}
    <section class="podcasts flex dark" aria-labels="faculty podcasts">
      <div class="column forty heading reveal">
        <a href="http://artsci.washu.edu/ampersand/categories/podcast"><img
            srcset="{{ base_path ~ directory }}//images/microphone_320.webp 320w, {{ base_path ~ directory }}//images/microphone_600.webp 600w, {{ base_path ~ directory }}//images/microphone_900.webp 900w" sizes="(max-width:1029px) 85vw, 1300px" width="900" height="566"
            src="{{ base_path ~ directory }}//images/microphone_900.webp" loading="lazy"
            alt="Hold That Thought Podcast"></a>
      </div>
      <div class="column sixty slideshow dot-slideshow dots-below flex reveal">
        {% if content.field_direct_link[0]['#url'] %}
        <a href="{{ content.field_direct_link[0]['#url'] }}" class="slide post" target="_blank"
           aria-label="Navigates to direct link of article">
          {% else %}
          <a href="/node/{{ node.id }}/latest" class="slide post" aria-label="View Article">
            {% endif %}
            {# $class = (strpos(render($content['field_category']), 'Video') !== false) ? 'video-post' : 'blog-post'; #}
            <article class="slide post podcast-post">
              <div class="post-details">
                {{ title_prefix }}
                {% if label %}
                  <h3{{ title_attributes }}>{{ label }}</h3>
                {% endif %}
                {{ title_suffix }}
                {% if content.field_link_excerpt.0 %}
                  <div class="teaser-text"><p>{{ content.field_link_excerpt }}</p></div>
                {% endif %}
                <div class="podcast-embed">{{ content.field_soundcloud_media }}</div>
              </div>
            </article>
          </a>
      </div>
    </section>
    {# </div> #}
  {% endif %}
{% endblock %}
