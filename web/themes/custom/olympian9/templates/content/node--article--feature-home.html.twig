{% block content %}
{% if is_shared_content == 1 %}
  <article class="slide flex">
    {% if headerImageDesktop %}
    <div class="image column half" style="background-image: url({{ headerImageDesktop }});"><img src="{{ headerImageDesktop }}" alt="Default Article image"></div>
    {% else %}
      <div class="image column half"
           style="background-image: url({{ base_path ~ directory }}/images/default-article.png);">
        <img src="{{ base_path ~ directory }}/images/default-article.png">
      </div>
    {% endif %}
    <div class="post-details column half">
      <div class="cat">
        {% if node.field_category.0 %}
          {% for item in node.field_category %}
            <a href="{{ landing_page_alias }}?tid={{ item.target_id }}">
              {{ item.entity.label }}{% if not loop.last %},{% endif %}</a>
          {% endfor %}
        {% endif %}
      </div>
      {% if externalURL %}
        <a href="{{ externalURL }}" class="card"
           aria-label="Link originates outside of WashU">
          {% if nodetitle %}
            <h2{{ title_attributes }}>{{ nodetitle }}
              <svg class="icon">
                <use xlink:href="#link-out"></use>
              </svg>
            </h2>
          {% endif %}
          {{ title_suffix }}
        </a>
        {% if excerpt %}
          <p>{{ excerpt }}</p>
        {% endif %}
        <div class="post-meta">
          <time>{{ postdate }}</time>
          | {{ content.field_direct_link[0]['#title'] }}
        </div>
      {% else %}
        <a href="{{ url }}" class="card" aria-label="View Article">
          {{ title_prefix }}
          {% if nodetitle %}
            <h2{{ title_attributes }}>{{ nodetitle }}</h2>
          {% endif %}
          {{ title_suffix }}
        </a>
        {% if summary %}
          <p>{{ summary }}</p>
        {% endif %}
        <div class="post-meta">
          <time>{{ postdate }}</time>
        </div>
      {% endif %}
    </div>

  </article>

  {#  if not shared content #}
{% else %}
   <article class="slide flex">
    {% if content.field_header_image.0 %}
      <div class="image column half"
           style="background-image: url({{ file_url(node.field_header_image.entity.field_media_image.entity.fileuri|image_style('background_image')) }});">
        <picture>
          <source
            srcset="{{ file_url(node.field_header_image.entity.field_media_image.entity.fileuri) }}"
            media="(min-width: 600px)">
          <img
            src="{{ file_url(node.field_header_image.entity.field_media_image.entity.fileuri) }}">
        </picture>
      </div>
    {% else %}
      <div class="image column half"
           style="background-image: url({{ base_path ~ directory }}/images/default-article.png);">
        <img src="{{ base_path ~ directory }}/images/default-article.png">
      </div>
    {% endif %}
    <div class="post-details column half">
      <div class="cat">
        {% if node.field_category.0 %}
          {% for item in node.field_category %}
            <a href="{{ landing_page_alias }}?tid={{ item.target_id }}">
              {{ item.entity.label }}{% if not loop.last %},{% endif %}</a>
          {% endfor %}
        {% endif %}
      </div>

      {% if content.field_direct_link[0]['#url'] %}
        <a href="{{ content.field_direct_link[0]['#url'] }}" class="card"
           aria-label="Link originates outside of WashU">
          {{ title_prefix }}
          {% if label %}
            <h2{{ title_attributes }}>{{ label }}
              {% if '1' in content.field_article_new_window[0] %}
              <svg class="icon">
                <use xlink:href="#link-out"></use>
              </svg>
              {% endif %}
            </h2>
          {% endif %}
          {{ title_suffix }}
        </a>
        {% if content.field_link_excerpt.0 %}
          <p>{{ content.field_link_excerpt.0 }}</p>
        {% endif %}
        <div class="post-meta">
          <time>{{ node.created.value|date('n.j.y') }}</time>
          | {{ content.field_direct_link[0]['#title'] }}
        </div>
      {% else %}
        <a href="{{ url }}" class="card" aria-label="View Article">
          {{ title_prefix }}
          {% if label %}
            <h2{{ title_attributes }}>{{ label }}</h2>
          {% endif %}
          {{ title_suffix }}
        </a>
        {% if content.field_link_excerpt.0 %}
          <p>{{ content.field_link_excerpt.0 }}</p>
        {% endif %}
        <div class="post-meta">
          <time>{{ node.created.value|date('n.j.y') }}</time>
        </div>
      {% endif %}
    </div>

  </article>
{% endif %}
{% endblock %}
