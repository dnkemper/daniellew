{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{{ attach_library('olympian9/views-exposed-form--faculty-page') }}
<div class="container">
  {% if q is not empty %}
    {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
    #}
    {{ q }}
  {% endif %}
  <br>
  <section id="filter" class="our-people search with-filter"
           aria-label="faculty search">
    <h2>Search for People:</h2>
    <div class="search-form">
        <svg class="icon">
          <use xlink:href="#icon-search"></use>
        </svg> {{ form.keys }}
      </div>
      <div class="{{ category_display_class }}">
        <div class="filter-options flex">
          <form class="options-list" aria-labelledby="people_filter_label">
            <div class="filter-list-column">
              <h3>{{ form.cat['#title'] }}</h3>
              <ul class="list">{{ form.cat }}</ul>
            </div>
            {% if category_display == 'null' %}
              <div class="filter-list-column">
                <h3>{{ areas_of_interest }}</h3>
                {{ form.areas|without('value.#title') }}

              </div>
            {% endif %}
          </form>
        </div>
      </div>
  </section>

  <div class="bottom-filter">
    <div class="pre-filter">
      <div class="view-alpha-block">
        <div class="view-alpha" id="view-alpha">{{ form.letter }}</div>
      </div>
      <div class="category-term-clear">{{ form.actions }}</div>
    </div>
  </div>
</div>
