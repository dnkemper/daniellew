
{# --- Include svg sprite --- #}
{# <div style="display: none">{% include social_buttons_sprite %}</div> #}

<div class="social-sharing-buttons">

    {# Twitter share button #}
    {% if twitter_username %}
        <a href="{{ twitter_username }}" target="_blank"
           class="social-sharing-buttons__button share-twitter">
           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"/></svg>
        </a>
    {% endif %}
    {% if facebook_username %}
        <a href="{{ facebook_username }}" target="_blank"
           class="social-sharing-buttons__button share-facebook">
            <svg>
                <use href="{{ base_path ~ directory }}/svg/sprites/social-icons--no-color.svg#facebook"/>
            </svg>
        </a>
    {% endif %}
    {# Email share button #}
    {% if site_mail %}
        <a target="_blank"
           href="mailto:?subject={{ current_title }}&amp;body={{ current_url }}"
           title="{{ 'Share to'|t }} Email" aria-label="{{ 'Share to'|t }} Email"
           class="social-sharing-buttons__button share-email" target="_blank" rel="noopener">
            {# <a href="{{ site_email }}"> #}
            <svg>
                <use href="{{ base_path ~ directory }}/svg/sprites/social-icons--no-color.svg#email"/>
            </svg>
        </a>
    {% endif %}

</div>
