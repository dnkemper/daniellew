{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - field_button_link - link
 * - field_new_window - boolean
 * - field_subtitle - text plain
 * - field_title - text plain
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{% block paragraph %}
	{# <div{{ attributes.addClass(classes) }}> #}
		{% if content.field_people_teaser_views[0]['#markup'] == 'List' %}
			{% set colorclass = '' %}
		{% elseif content.field_people_teaser_views[0]['#markup'] == 'List-Gray Background' %}
			{% set colorclass = 'gray' %}
		{% elseif content.field_people_teaser_views[0]['#markup'] == 'Card-3 Column' %}
			{% set gridclass = 'grid-3' %}
		{% elseif content.field_people_teaser_views[0]['#markup'] == 'Card-3 Column-Gray Background' %}
			{% set gridcolors = 'gray' %}
      {% set gridclass = 'grid-3' %}
		{% elseif content.field_people_teaser_views[0]['#markup'] == 'Card-2 Column-Gray Background' %}
			{% set gridcolors = 'gray' %}
		{% endif %}
		{% if '1' in content.field_display_research_interests[0] %}
			{% set researchinterests = 'display-research-interests' %}
			{% else %}
			{% set researchinterests = 'no-display-research-interests' %}
			{% endif %}

		<div id="{{ researchinterests }}">
		{% if content.field_people_teaser_views[0]['#markup'] == 'List' or content.field_people_teaser_views[0]['#markup'] == 'List-Gray Background' %}
			<section class="people-list {{ colorclass }} {{ researchinterests }}" id="people">
				<div class="container">
					{% if content.field_people_teaser_titles.0 or content.field_optional_text.0 %}
						<header class="people-list--header">
							{% if content.field_people_teaser_titles.0 %}
								<h2>{{ content.field_people_teaser_titles.0 }}</h2>
							{% endif %}
							{% if content.field_optional_text.0 %}
								{{ content.field_optional_text.0 }}
							{% endif %}
						</header>
					{% endif %}
					{% if content.field_taxonomy_term.0 %}
						{{ drupal_view('person_teaser', 'list_block', paragraph.field_taxonomy_term.entity.tid.value) }}
					{% else %}
						{{ content.field_person_selector }}
					{% endif %}
				</div>
			</section>
		{% else %}
			<section class="people-list people-list--teasers-grid {{ gridcolors }} {{ researchinterests }}" id="people">
					<div class="container">
						{% if content.field_people_teaser_titles.0 or content.field_optional_text.0 %}
							<header class="people-list--header">
								{% if content.field_people_teaser_titles.0 %}
									<h2>{{ content.field_people_teaser_titles.0 }}</h2>
								{% endif %}
								{% if content.field_optional_text.0 %}
									{{ content.field_optional_text.0 }}
								{% endif %}
							</header>
						{% endif %}
						<div class="people-list--teasers people-list--teasers-grid {{ gridclass }}">
							{% if content.field_taxonomy_term.0 %}
								{{ drupal_view('person_teaser', 'two_col_card', paragraph.field_taxonomy_term.entity.tid.value) }}
							{% else %}
								{{ content.field_person_selector }}
							{% endif %}
						</div>
					</div>
				</div>
			</section>
		{% endif %}
	</div>
{% endblock paragraph %}
