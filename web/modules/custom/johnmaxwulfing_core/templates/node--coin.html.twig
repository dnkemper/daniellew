{% elseif content.field_coin_object_num %}
{{ content.field_coin_object_num }}
{% endif %}
</div>

{# DATES #}
{% if content.field_coin_date_first < 0 %}
    {{ content.field_coin_date_first }} *= -1
    {{ content.field_coin_date_first }} .=  " BC"
{% endif %}
{% if content.field_coin_date_last < 0 %}
    {{ content.field_coin_date_last }} *= -1
    {{ content.field_coin_date_last }} .=  " BC"
{% endif %}
{% if content.field_coin_date_first or content.field_coin_date_last %}
    <div><strong>Dates: </strong>
{% endif %}
{% if content.field_coin_date_first and content.field_coin_date_last %}
  {{ content.field_coin_date_first }}&nbsp;-&nbsp;{{ content.field_coin_date_last }}
{% elseif content.field_coin_date_first %}
  {{ content.field_coin_date_first }}
{% elseif content.field_coin_date_last %}
  {{ content.field_coin_date_last }}
{% endif %}

</div>

