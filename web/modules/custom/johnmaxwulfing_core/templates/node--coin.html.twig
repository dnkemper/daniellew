<div class="coinImage">{{ content.field_coin_reverse_image }}</div>

  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}


<div class="post-meta">




<div class="baseInfo">
{% if content.field_coin_object_type %}
{{ content.field_coin_object_type }}
